{
  "manifest_version": 2,
  "name": "Thunderbird AI Email Enhance",
  "version": "1.0.0",
  "description": "Melhore seus emails usando IA",
  "author": "Your Name",
  "applications": {
    "gecko": {
      "id": "thunderbird-ai-enhance@example.com",
      "strict_min_version": "78.0"
    }
  },
  "permissions": [
    "storage",
    "compose",
    "messagesRead"
  ],
  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  },
  "background": {
    "scripts": ["background/background.js"],
    "persistent": false
  },
  "compose_action": {
    "default_title": "AI Email Enhance"
  },
  "content_scripts": [
    {
      "matches": ["chrome://messenger/content/messengercompose/messengercompose.xhtml"],
      "js": ["content/compose.js"],
      "css": ["content/compose.css"]
    }
  ]
}
